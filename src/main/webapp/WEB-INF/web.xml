<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <!-- Servlets  -->
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.revature.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>create</servlet-name>
  	<servlet-class>com.revature.servlets.CreateServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>expense-home</servlet-name>
  	<servlet-class>com.revature.servlets.ExpenseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>create</servlet-name>
  	<url-pattern>/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>expense-home</servlet-name>
  	<url-pattern>/expense</url-pattern>
  </servlet-mapping>
</web-app>
